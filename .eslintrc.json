{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [
        {
          "files": [
            "**/*.test.js"
          ],
          "env": {
            "jest": true
          }
        }
    ],
    "ignorePatterns": [
        "node_modules/",
        "**/node_modules/",
        "/**/node_modules/*",
        "out/",
        "dist/",
        "build/"
    ],
    "rules": {
        "no-constant-condition": "off",
        "no-empty": "off",
        "no-unused-vars": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
